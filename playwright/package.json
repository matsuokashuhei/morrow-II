{
  "name": "morrow-e2e-tests",
  "version": "1.0.0",
  "type": "module",
  "description": "End-to-end tests for Morrow application using Playwright",
  "scripts": {
    "test": "npx playwright test",
    "test:dev": "npx playwright test --config=playwright.dev.config.ts",
    "test:fast": "npx playwright test --config=playwright.dev.config.ts --project=chromium",
    "test:smoke": "npx playwright test tests/connectivity.spec.ts --config=playwright.dev.config.ts",
    "test:smoke-full": "npx playwright test --config=playwright.smoke.config.ts",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:connectivity": "npx playwright test tests/connectivity.spec.ts",
    "test:home": "npx playwright test tests/home.spec.ts",
    "test:onboarding": "npx playwright test tests/onboarding.spec.ts",
    "test:events": "npx playwright test tests/event-creation.spec.ts",
    "report": "npx playwright show-report reports/html",
    "install-browsers": "npx playwright install",
    "install-deps": "npx playwright install-deps"
  },
  "dependencies": {
    "@playwright/test": "^1.54.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
