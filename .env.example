# Backend Environment Variables
GO_ENV=development
PORT=8080

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=morrow_dev
DB_USER=morrow_user
DB_PASSWORD=morrow_password

# JWT Configuration (for future authentication)
JWT_SECRET=your-jwt-secret-key-here
